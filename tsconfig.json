{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "rootDir": "src",
        "baseUrl": "src",
        "outDir": "build",
        "allowJs": false,
        "pretty": true,
        "strictNullChecks": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "lib":["es2017", "esnext.asynciterable", "dom"],
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "dangerfile.ts"
    ],
    "exclude": [
        "dangerfile.ts",
        "node_modules",
        "build"
    ]
}
